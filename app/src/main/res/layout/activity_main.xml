<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.attu.attu.views.HomeActivity"
android:id="@+id/home_screen">
<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Join SongRoom"
    android:id="@+id/join_songroom_button"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginLeft="50dip"
    android:layout_marginRight="50dip"
    android:layout_above="@+id/listen_yourself_button"
    android:layout_marginTop="8dip" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Create SongRoom"
    android:id="@+id/create_songroom_button"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="50dip"
    android:layout_marginRight="50dip"
    android:layout_above="@+id/join_songroom_button"
    android:layout_alignParentEnd="true" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Listen Yourself"
    android:id="@+id/listen_yourself_button"
    android:layout_marginBottom="60dp"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="50dip"
    android:layout_marginTop="8dip"
    android:layout_alignLeft="@+id/join_songroom_button"
    android:layout_alignStart="@+id/join_songroom_button" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="PlayListr"
    android:id="@+id/playlistr_title_text"
    android:layout_marginTop="124dp"
    android:textSize="45dip"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
